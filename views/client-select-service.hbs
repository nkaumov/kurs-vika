<h4 class="center-align">Выберите нужную услугу</h4>

<div class="row">
  {{#each services}}
    <div class="col s12 m6 l4">
      <div class="card hoverable">
        <div class="card-content">
          <span class="card-title">{{name}}</span>
          <p><strong>Категория:</strong> {{category}}</p>
          <p>{{description}}</p>
        </div>
        <div class="card-action center-align">
          <a href="/client/select-master/{{id}}" class="btn pink lighten-1">Выбрать</a>
        </div>
      </div>
    </div>
  {{else}}
    <p class="center-align">Услуг пока нет.</p>
  {{/each}}
</div>
