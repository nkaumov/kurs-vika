<h4 class="center-align">Мои заявки</h4>

<table class="highlight responsive-table">
  <thead>
    <tr>
      <th>Клиент</th>
      <th>Телефон</th>
      <th>Услуга</th>
      <th>Дата и время</th>
      <th>Статус</th>
    </tr>
  </thead>
  <tbody>
    {{#each requests}}
      <tr>
        <td>{{client_name}}</td>
        <td>{{client_phone}}</td>
        <td>{{service_name}}</td>
        <td>{{date}} {{time}}</td>
        <td>
          <span class="chip {{statusColor status}}">
            {{statusLabel status}}
          </span>
        </td>
      </tr>
    {{else}}
      <tr>
        <td colspan="5" class="center-align">Нет заявок для отображения.</td>
      </tr>
    {{/each}}
  </tbody>
</table>
